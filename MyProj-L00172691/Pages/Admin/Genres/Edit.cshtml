@page
@model MyProj_L00172691.Pages.Admin.Genres.EditModel
@{
}
<form method="post">
	<input hidden asp-for="Genre.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Update New Author</h2>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Genre.Name"></label>
			<input asp-for="@Model.Genre.Name" class="form-control" />
			<span asp-validation-for="@Model.Genre.Name" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Update</button>
		<a asp-page="Index" class="btn btn-secondary">Back to Index</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_validationScriptsPartial" />
	}
}