@page
@model MyProj_L00172691.Pages.Admin.Books.DeleteModel
@{
}
<form method="post">
	<input hidden asp-for="Book.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete Book</h2>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Book.Title"></label>
			<input asp-for="@Model.Book.Title" class="form-control" readonly />

			<label asp-for="@Model.Book.Author"></label>
			<input asp-for="@Model.Book.Author" class="form-control" readonly />

			<label asp-for="@Model.Book.Genre"></label>
			<input asp-for="@Model.Book.Genre" class="form-control" readonly />
		</div>
		<button type="submit" class="btn btn-danger">Delete</button>
		<a asp-page="Index" class="btn btn-secondary">Back to Index</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_validationScriptsPartial" />
	}
}