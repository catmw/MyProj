@page
@model MyProj_L00172691.Pages.Customer.Home.DetailsModel
@{
}
<div class="">
    <form method="post">

        <input asp-for="ShoppingCart.BookId" hidden/>
        <input asp-for="ShoppingCart.ApplicationUserID" hidden />

        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header">
                    <div class="text-light ml-0 row ">
                        <div class="col-12 col-md-6 pt-2">
                            <h1 class="text-primary">@Model.ShoppingCart.Book.Title</h1>
                        </div>
                        <div class="col-12 col-md-6 text-end pt-2">
                            <h1 class="text-muted">@Model.ShoppingCart.Book.Price</h1>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Model.ShoppingCart.Book.Description</p>
                                        <p class="text-secondary">Genre Name</p>
                                        <div class="form-floating my-2">
                                            <label asp-for="@Model.ShoppingCart.Quantity"></label>
                                            <input asp-for="@Model.ShoppingCart.Quantity" class="form-control" />
                                            <span asp-validation-for="@Model.ShoppingCart.Quantity" class="text-danger"></span>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.ShoppingCart.Book.ImageName" width="100%" class="rounded" />
                            </div>


                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-page="Index" class="btn btn-success btn-square form-control" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" class="btn btn-primary btn-square form-control" style="height:50px;">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>