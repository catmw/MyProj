@page
@model MyProj_L00172691.Pages.Books.EditModel
@{
}
<form method="post">
	<input hidden asp-for="Book.Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Update New Book</h2>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Book.Title"></label>
			<input asp-for="@Model.Book.Title" class="form-control" />
			<span asp-validation-for="@Model.Book.Title" class="text-danger"></span>

			<label asp-for="@Model.Book.Author"></label>
			<input asp-for="@Model.Book.Author" class="form-control" />
			<span asp-validation-for="@Model.Book.Author" class="text-danger"></span>

			<label asp-for="@Model.Book.Genre"></label>
			<input asp-for="@Model.Book.Genre" class="form-control" />
			<span asp-validation-for="@Model.Book.Genre" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Update</button>
		<a asp-page="Index" class="btn btn-secondary">Back to Index</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_validationScriptsPartial" />
	}
}